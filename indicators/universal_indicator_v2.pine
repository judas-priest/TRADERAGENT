    // Header / –ó–∞–≥–æ–ª–æ–≤–æ–∫
    table.cell(stateTable, 0, 0, "Market State / –°–æ—Å—Ç–æ—è–Ω–∏–µ —Ä—ã–Ω–∫–∞",
               bgcolor=color.new(color.blue, 70),
               text_color=color.white,
               text_size=size.small)
    table.cell(stateTable, 1, 0, "Value / –ó–Ω–∞—á–µ–Ω–∏–µ",
               bgcolor=color.new(color.blue, 70),
               text_color=color.white,
