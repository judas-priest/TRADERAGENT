    table.cell(stateTable, 0, 4, "ATR Ratio / ATR –∫–æ—ç—Ñ—Ñ.", text_size=size.small)
    table.cell(stateTable, 1, 4, str.tostring(volatilityRatio, "#.##"), text_size=size.small)

    // Adaptive momentum threshold / –ê–¥–∞–ø—Ç–∏–≤–Ω—ã–π –ø–æ—Ä–æ–≥ –º–æ–º–µ–Ω—Ç—É–º–∞
    table.cell(stateTable, 0, 5, "Mom. Threshold / –ü–æ—Ä–æ–≥ –º–æ–º.", text_size=size.small)
    table.cell(stateTable, 1, 5, str.tostring(adaptiveMomentumThreshold, "#.##"), text_size=size.small)

    // Adaptive min bars / –ê–¥–∞–ø—Ç–∏–≤–Ω–æ–µ –º–∏–Ω. –±–∞—Ä–æ–≤
    table.cell(stateTable, 0, 6, "Min Bars / –ú–∏–Ω. –±–∞—Ä–æ–≤", text_size=size.small)
    table.cell(stateTable, 1, 6, str.tostring(adaptiveMinBars), text_size=size.small)

    // Trading recommendation / –¢–æ—Ä–≥–æ–≤–∞—è —Ä–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏—è
    table.cell(stateTable, 0, 7, "Recommendation / –†–µ–∫–æ–º–µ–Ω–¥–∞—Ü–∏—è", text_size=size.small)
    recommendation = isHighVolatility and isSideways ? "‚ö†Ô∏è Caution" :
                     isStrongTrend ? "‚úÖ Good" :
                     "‚ö™ Neutral"
    recColor = isHighVolatility and isSideways ? color.new(color.orange, 80) :
