    table.cell(infoTable, 0, 13, "Size", text_color=color.gray, text_size=size.small)
    posSize = strategy.position_size
    posText = posSize > 0 ? "LONG" : posSize < 0 ? "SHORT" : "None"
    posColor = posSize > 0 ? color.green : posSize < 0 ? color.red : color.gray
    table.cell(infoTable, 1, 13, posText, text_color=posColor, text_size=size.small)
    table.merge_cells(infoTable, 1, 13, 2, 13)

