useDirectionalVolume = input.bool(true, "Use Directional Volume / –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–Ω—ã–π –æ–±—ä—ë–º", group="üìä Volume Settings")

// === üìà EMA Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ EMA ===
ema1Length = input.int(9, "EMA 1 Length / –ü–µ—Ä–∏–æ–¥ EMA 1", minval=1, group="üìà EMA Settings")
ema2Length = input.int(5, "EMA 2 Length / –ü–µ—Ä–∏–æ–¥ EMA 2", minval=1, group="üìà EMA Settings")
ema3Length = input.int(200, "EMA 3 Length / –ü–µ—Ä–∏–æ–¥ EMA 3", minval=1, group="üìà EMA Settings")

// === üéØ Confluence Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ Confluence ===
minConfluenceScore = input.int(6, "Min Confluence Score / –ú–∏–Ω. –±–∞–ª–ª confluence", minval=2, maxval=15, group="üéØ Confluence Settings")
minBarsBetweenSignals = input.int(12, "Min Bars Between Signals / –ú–∏–Ω. –±–∞—Ä–æ–≤ –º–µ–∂–¥—É —Å–∏–≥–Ω–∞–ª–∞–º–∏", minval=1, group="üéØ Confluence Settings")

// === ‚öñÔ∏è Indicator Weights / –í–µ—Å–∞ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–æ–≤ ===
rsiWeight = input.int(2, "RSI Weight / –í–µ—Å RSI", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights")
macdWeight = input.int(2, "MACD Weight / –í–µ—Å MACD", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights")
stochWeight = input.int(2, "Stochastic Weight / –í–µ—Å Stochastic", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights")
volumeWeight = input.int(2, "Volume Weight / –í–µ—Å –æ–±—ä—ë–º–∞", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights")
priceActionWeight = input.int(1, "Price Action Weight / –í–µ—Å Price Action", minval=0, maxval=5, group="‚öñÔ∏è Indicator Weights")
