stochOversold = input.int(30, "Stochastic Oversold / –ü–µ—Ä–µ–ø—Ä–æ–¥–∞–Ω–Ω–æ—Å—Ç—å", minval=1, maxval=50, group="üìâ Stochastic Settings")
stochOverbought = input.int(83, "Stochastic Overbought / –ü–µ—Ä–µ–∫—É–ø–ª–µ–Ω–Ω–æ—Å—Ç—å", minval=50, maxval=100, group="üìâ Stochastic Settings")

// === üìä Volume Settings / –ù–∞—Å—Ç—Ä–æ–π–∫–∏ –æ–±—ä–µ–º–∞ ===
volumeMaLength = input.int(10, "Volume MA Length / –ü–µ—Ä–∏–æ–¥ MA –æ–±—ä–µ–º–∞", minval=1, group="üìä Volume Settings")
