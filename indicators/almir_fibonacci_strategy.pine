    table.cell(infoTable, 0, 14, "Open Trades", text_color=color.gray, text_size=size.small)
    table.cell(infoTable, 1, 14, str.tostring(strategy.opentrades), text_color=color.white, text_size=size.small)
    table.merge_cells(infoTable, 1, 14, 2, 14)

    // Net Profit / –ß–∏—Å—Ç–∞—è –ø—Ä–∏–±—ã–ª—å
    table.cell(infoTable, 0, 15, "Net Profit", text_color=color.gray, text_size=size.small)
