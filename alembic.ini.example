# Alembic configuration file for TRADERAGENT database migrations
# Copy this file to alembic.ini and configure with your database URL
#
# SETUP:
# 1. Copy: cp alembic.ini.example alembic.ini
# 2. Edit sqlalchemy.url with your database credentials
# 3. Run: alembic upgrade head

[alembic]
script_location = alembic
version_path_separator = os

# Database URL - REPLACE WITH YOUR CREDENTIALS
# Format: postgresql+asyncpg://user:password@host:port/database
# Examples:
#   Local: postgresql+asyncpg://traderagent:password@localhost:5432/traderagent
#   Docker: postgresql+asyncpg://postgres:password@postgres:5432/traderagent
sqlalchemy.url = postgresql+asyncpg://USER:PASSWORD@HOST:PORT/DATABASE


[post_write_hooks]

[loggers]
keys = root,sqlalchemy,alembic

[handlers]
keys = console

[formatters]
keys = generic

[logger_root]
level = WARN
handlers = console
qualname =

[logger_sqlalchemy]
level = WARN
handlers =
qualname = sqlalchemy.engine

[logger_alembic]
level = INFO
handlers =
qualname = alembic

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[formatter_generic]
format = %(levelname)-5.5s [%(name)s] %(message)s
datefmt = %H:%M:%S
